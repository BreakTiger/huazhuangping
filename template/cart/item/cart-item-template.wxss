/*外框容器*/

.cart-item-wrap {
  width: 702rpx;
  border-radius: 20rpx;
  box-shadow: 0rpx 3rpx 7rpx 0rpx rgba(6, 0, 1, 0.4);
  background-color: #fff;
  margin-bottom: 20rpx;
  transition: left 0.2s ease-in-out;
}

.cart-item-container {
  display: flex;
  flex-direction: column;
}

/* 首行 */

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 10rpx;
}

/* 文本 */

.header text {
  font-size: 28rpx;
  color: #666;
}

/* 图标 */

.head-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 15rpx;
  margin-left: 22rpx;
}

/* 删除图标 */

.del-icon {
  width: 30rpx;
  height: 29rpx;
  margin-left: 450rpx;
}

/* 信息容器 */

.main-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

/*选择框容器*/

.cart-check-container {
  width: 34rpx;
  height: 34prx;
  margin-right: 20rpx;
  text-align: center;
  margin-left: 15rpx;
}

/*图片*/

.cart-item-image {
  width: 195rpx;
  height: 214rpx;
}

.cart-item-image image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}

/* 信息容器 */

.cart-info-container {
  display: flex;
  flex-direction: column;
  width: 420rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
  margin-left: 12rpx
}

/*商品主标题*/

.goods-title-text {
  /* width: 450rpx; */
  height: 70rpx;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 15rpx;
  white-space: normal;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* 规格 */

.spec {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

/*价格/数量栏*/

.goods-price-num-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 15rpx;
  justify-content: space-between;
  padding-right: 10rpx;
}

.goods-price-num-container .price {
  font-size: 30rpx;
  color: #b80106;
}
