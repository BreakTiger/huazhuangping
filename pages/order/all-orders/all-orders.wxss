/* 引入样式 */



/* 商品信息的样式 */
@import "/template/cart/order-item/confirm-order-item.wxss";

/* 整体盒子 */

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 导航栏盒子 */

.top-tab-line {
  width: 750rpx;
  /* height: 100rpx; */
  position: fixed;
  top: 0;
  left: 0;
  background: #f7f7ff;
  height: 80rpx;
  margin-bottom: 20rpx
}

.tab-list-content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
   padding-left: 50rpx;
  padding-right: 50rpx; 
  box-sizing: border-box;
  margin-top: 10rpx;
  background-color: #fff;
  height: 70rpx;
  line-height: 70rpx
}

.tab-list-item{
  margin-bottom: 15rpx;
  box-sizing: border-box
}

/* 文字 */
.tab-list-item text{
  font-size: 30rpx;
  color: #333;
}

/* 点击触发的样式 */
.active{
  box-sizing: border-box;
  border-bottom:4rpx solid #e89846;
}


/* 商品订单的列表 */

.lists_content {
  width: 100%;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  margin-top: 90rpx;
}

/* 列表中的单项内容 */

.list-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 21rpx;
}

/* 首行：图标+名字+状态 */

.first-line {
  width: 750rpx;
  height: 79rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  justify-content: space-between;
}

.line-icon-name {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
}

/* 图标 */

.h-icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 20rpx;
}

/* 文本 */

.list-item text {
  font-size: 30rpx;
}

.order-type {
  margin-right: 20rpx;
  color: #e89846;
}

/* 汇总 */

.total-info {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  background-color: #fff;
   padding-right: 50rpx; 
   box-sizing: border-box;
}

/* 文本 */

.total-info text {
  font-size: 30rpx;
  color: #666;
}

.order-btn {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 1px solid #f5f5f5;
  height: 90rpx;
  padding-right: 30rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.btn1 {
  border: 2rpx solid #e89846;
  color: #e89846;
  font-size: 28rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
   height: 50rpx;
  line-height: 50rpx;
  margin-right: 20rpx;
}

.btn2 {
  border: 2rpx solid #858585;
  color: #858585;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  margin-left: 35rpx;
  margin-right: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.websrc{
  height: 50rpx;
  
}

.pro-content{
  width: 100%;
  background: #fff
}