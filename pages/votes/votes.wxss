page {
  background-color: #fff;
}

.container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

.top-info {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  padding-bottom: 20rpx;
}

.top-info text {
  font-size: 30rpx;
}

.title {
  width: 140rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 40rpx;
  background-color: #b80106;
  border-radius: 20rpx;
  color: #fff;
  font-size: 30rpx;
  text-align: center;
  padding-top: 10rpx;
}

.votes_list {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}

.lits_item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
  border-bottom:3rpx solid #f5f5f5;

}

.item_img {
  width: 272rpx;
  height: 272rpx;
  border-radius: 20rpx;
}

.list_info {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  padding-bottom: 25rpx;
}

.name {
  width: 430rpx;
  height: 75rpx;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

progress{
  margin-bottom: 10rpx;
}

.tickets{
  font-size: 25rpx;
  color: #b80106;
  margin-bottom: 25rpx;
}

.total-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}


.price{
  font-size: 30rpx;
  color: #b80106;
}

.up_btn1 {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #b80106;
  color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  text-align: center;
  padding-top: 5rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx
}

.up_btn2 {
  width: 140rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #eea14e;
  color: #fff;
  border-radius: 20rpx;
  font-size: 30rpx;
  text-align: center;
  padding-top: 5rpx;
  position: absolute;
  bottom: 20rpx;
  right: 20rpx
}
