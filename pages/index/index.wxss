@import "/template/lunbo/lunbo.wxss";
@import "/template/scrollImg/scrollImg.wxss";
page{
  background: #F7F7F7
}
/*搜索  */
.topsearchbox{
  width: 100%;
  height: 110rpx;
  background: #fff;
  box-sizing: border-box;
  padding-top: 20rpx
}
.in-inputs {
  width: 90%;
  height: 60rpx;
  background: #efefef;
  text-align: center;
  margin: auto;
  border-radius: 12rpx;
}

.in-inputs icon {
  margin-top: 20rpx;
}

.location {
  width: 130rpx;
  height: 60rpx;
  background-color: rgba(255, 255, 255, 0.6);
  position: absolute;
  left: 0;
  top: 20rpx;
  z-index: 222;
}

.logos-style {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
}
.banner{
  width: 100%;
  height: 500rpx;
}
/*全部商品  */
.allgoods{
  width: 100%;
  height: auto;
  margin-top: 30rpx;
  background: #fff
}
.allbox{
  width: 95%;
  height: auto;
  margin: auto;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
}
.one{
  width: 48%;
  margin-bottom: 20rpx
}
.one image{
  width: 100%;
  height: 260rpx;

}