page{
  background-color: #fff;
}
.gift{
  width: 100%;
  height: 60rpx;
  color: #b80106;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  line-height: 60rpx
}

.all-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 公告 */
.header-info{
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.title-box{
  width: 144rpx;
  height: 45rpx;
  line-height: 45rpx;
  background-color: #b80106;
  border-radius: 12rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  margin-right: 20rpx;
  margin-left: 20rpx;
}

.info{
  font-size: 24rpx;
  color: #333;
}

.pro-lists{
  margin-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.content{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 30rpx;
}


/* 图片 */
.goodsimg{
  width: 270rpx;
  height: 270rpx;
  border-radius: 20rpx;
  margin-right: 15rpx;
}

/* 信息框 */
.info-box{
  display: flex;
  flex-direction: column;
}

/* 商品名字 */
.goodsname{
  width: 430rpx;
  height: 75rpx;
  font-size: 30rpx;
  color: #333;
  margin-bottom: 20rpx;
  overflow:hidden;
  text-overflow: ellipsis;
}

/* 进度条 */
.pro-box{
  width: 400rpx;
  margin-bottom: 20rpx;
}

.buynumbers{
  font-size: 20rpx;
  color: #bd1217;
  margin-bottom: 50rpx;
}

.price{
  font-size: 30rpx;
  color: #bd1217;
}

.btn-icon{
  width: 123rpx;
  height: 123rpx;
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  border-radius: 50%;
  background: #b80106;
  color: #fff;
  font-size: 50rpx;
  text-align: center;
  line-height: 123rpx
}
.contenttwo{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}
.giftbox{
  width: 95%;
  margin: auto;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  margin-bottom: 10rpx
}