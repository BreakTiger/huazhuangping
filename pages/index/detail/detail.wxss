/* 计算加减 */
.stepper{
  display: flex;
  border-radius: 5px;
  text-align: center;
}
.stepper text{
  display: block;
  width: 50rpx;
  height: 52rpx;
  background-color:#F7F7F7 ;
  /* border:1px solid #999999; */
  line-height: 50rpx;
  /* color: #666666; */
}
.stepper input{
  display: block;
  width: 100rpx;
  height: 50rpx;
  /* border:1px solid transparent; */
  margin: 0 5rpx;
  line-height: 50rpx;
  color: #333333;
   font-size: 28rpx;
   text-align: center;
   background-color: #f7f7f7;
}
/* .stepper wx-input.numberin{
  width: 120rpx;
} */
.stepper text:first-child{
  border-right: none;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}
.stepper text:last-child{
  border-left: none;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
}
/* 减号禁用样式 */
.stepper .disabled{
  border-color: rgba(153,153,153,0.2)
}
.shade-shop-button{
  width: 100%;
  height: 100rpx
}
.button-add{
  width: 90%;
  height: 80rpx;
  color: white;
  line-height: 80rpx;
  text-align: center;
  font-size: 32rpx;
  background: #B80106;
  margin: auto;
  border-radius: 10rpx
}