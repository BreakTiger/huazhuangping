@import "/template/lunbo/lunbo.wxss";
page{
  background: #f7f7f7
}
.banner{
  width: 100%;
  height: auto;
}
/*商品介绍  */
.goodsticket{
  width: 100%;
  height: 220rpx;
  position: relative
}
.goodsbox{
  position: absolute;
  width: 95%;
  height: 320rpx;
  left: 20rpx;
  top: -100rpx;
  margin: auto;
  /* box-shadow: 0rpx 0rpx 100rpx 10rpx #ccc; */
