.ssab{
  display: flex;
  flex-direction: column;
}
/*商品介绍图  */
.detailimg{
  margin-bottom: 110rpx
}
.infotitle{
  width: 100%;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333;
  margin-top: 30rpx;
  text-align: center
}
.imgbox{
  width: 100%;
  height: auto
}
.imgbox image{
  width: 100%
}
/* 四，底部按钮  */
  .content-btn{
  height: 100rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #ffffff;
  border-top: 1rpx solid #ddd;
} 
.btn-left{
  width: 40%;
  font-size: 20rpx;
  color: #999999;
}

.btn-left>view{
  width: 35%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.homeback{
  margin-left: 12%;
}
.shopcar{
  margin-left: 6%;
}

.btn-right{
  flex: 1;
  font-size: 30rpx;
}
.btn-right>view{
  width: 50%;
}
.btn-right-1{
  background-color: rgb(205,77,80);
  color: white;
}
.btn-right-2{
  background-color: #B80106;
  color: white;
}
.btn-img{
  width:50rpx;
  height: 50rpx;
} 

/*添加购物车详情  */
/* 点击加入购物车弹出框  */
.add-rob{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  overflow: hidden;
}
.rob-box{
  width: 100%;
  background-color: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
}
.merch-stepper-symbol{
  width: 48rpx;
  height: 48rpx;
  background-color: white;
  border-radius: 8rpx;
}
.merch-stepper .nownum{
  width: 50rpx;
  text-align: center;
  margin: 0 20rpx;
}



/* 加入和结算按钮 */
.button-addto,.button-accountto{
  height: 100rpx;
  color: white;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}
.button-addto{
  background-color: #e5c41d;
}
.button-accountto{
  background-color: #ff3300;
}
.nav-nav{
  display: flex;
}
.nav-nav>view{
  width: 50%;
  background: white;
}
.nav-left,.nav-right{
   text-align: center;
}
.nav-left>view,.nav-right>view{
   width: 45rpx;
   height: 45rpx;
   margin: 0 auto;
   margin-top: 15rpx;
}
.nav-left>view image, .nav-right>view image{
  width: 100%;
  height: 100%;
  vertical-align: top;
}
.nav-left text,.nav-right text{
  display: block;
  margin-top: -30rpx;
  font-size: 20rpx;
}
/* 加入购物车************************************************************************ */
/*点击购买弹出购买框 遮照购买层 */
.shade{
  width: 100%;
  height:100%;
  position: fixed;
  top:0;
  left: 0;
  background: rgba(0,0,0,0.5);
}
.shade-shop{
  width: 100%;
  height: 290rpx;
  background-color: white;
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
/* 待添加商品详情 */
.shade-shop-detail{
  padding: 20rpx 24rpx 40rpx;
}
/* 左侧详情 */
.detail-left{
  display: flex;
  flex: 1;
}
.detail-left-img{
  width: 200rpx;
  height: 200rpx;
  border:5rpx solid #ffffff;
  border-radius: 12rpx;
  position: relative;
  top: -60rpx;
  left: 0rpx;
  background-color: white;
  box-shadow: 2rpx 2rpx 3rpx 1rpx rgba(150,150,150,0.1);
  overflow: hidden;
}
.detail-left-img image{
  width: 100%;
  height: 100%;
}
.detail-left-text{
  width: 518rpx;
  margin-left: 20rpx;
}
.detail-left-text view:nth-child(1){
  font-size: 30rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
/*关闭弹窗按钮  */
.close{
  position:absolute;
  width: 30rpx;
  height: 30rpx;
  top: 30rpx;
  right:30rpx;
  /* border: 1rpx saddlebrown solid */
}
.close image{
  width: 30rpx;
  height: 30rpx;
}
.detail-mid .mid-list{
  margin: 20rpx 0 40rpx;
}
.detail-mid .m-l-item{
  padding: 15rpx 20rpx;
  font-size: 24rpx;
  background-color: #e7e7e7;
  border-radius: 8rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx
}
.detail-mid  .zhuangactive{
  background-color: #B80106;
  color: #fff;
}
/* 关闭及加减 */

.detail-title-de{
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 20rpx;
}
