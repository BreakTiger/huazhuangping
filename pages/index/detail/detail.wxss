}
.onefloor{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  font-size: 32rpx;
  color: #B80106;
  line-height: 60rpx;
}
.price{
  width: 150rpx;
   /* border: 1rpx sienna solid */
   
}
.past{
  width: 130rpx;
  line-height: 60rpx;
  color: #ccc;
  font-size: 26rpx;
  text-decoration: line-through;
  /* border: 1rpx sienna solid */
}
.endtime{
  width: 100%;
  font-size: 24rpx;
  /* border: 1rpx sienna solid */
}
.twofloor{
  width: 100%;
  box-sizing: border-box;
  height: auto;
  font-size: 30rpx;
  color: #333;
  margin-top: 15rpx
}
.threefloor{
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color:#666;
  font-size: 28rpx;
  margin-top: 20rpx
}
.sales{
  width: 200rpx;
}
.inventory{
  width: 200rpx;
  text-align: right
}
.fourfloor{
  width: 100%;
  height: 40rpx;
  color: #B80106;
  font-size: 28rpx;
  display: flex;
