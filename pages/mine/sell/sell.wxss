.all-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  
}

/* 置顶导航内容 */

.tablist {
  display: flex;
  height: 90rpx;
}

.tablist .item {
  flex: auto;
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  color: #333;
}

/* 选中时文字的颜色 */

.tablist .item.select {
  color: #bd0000;
}

/* 下边线控制 */

.tablist .item.select::after {
  content: "";
  height: 5rpx;
  /* display: block; */
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  background: #bd0000;
}



/* 内容列表总盒子 */
.content{
  display: flex;
  flex-direction: column;
}

/* 列表中的单个盒子 */
.level-box{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
  padding-left: 30rpx
}

.img_src{
  width: 103rpx;
  height: 103rpx;
  border-radius: 50%;
  margin-right: 25rpx;
  margin-left: 20rpx;
}

.name-level{
