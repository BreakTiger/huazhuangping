/* 整体容器 */

.container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

/* 颜色信息框 */

.color-info {
  width: 750rpx;
  height: 240rpx;
  background-color: #b80106;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 文字 */

.color-info text {
  color: #fff;
}

/* 标题 */

.color-info .title {
  margin-top: 45rpx;
  margin-bottom: 15rpx;
}

/* 提示信息 */

.hint {
  width: 750rpx;
  height: 204rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  margin-bottom: 20rpx;
}

.hint .h-title {
  font-size: 30rpx;
  color: #b80106;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}

.hint .h-message {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 25rpx;
}

/* 记录列表 */

.record-list {
  width: 750rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.list-title {
  font-size: 30rpx;
  color: #b80106;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #f5f5f5;
  padding-top: 20rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

/* 图片 */

.list-img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  margin-right: 25rpx;
}

.list-info {
  display: flex;
  flex-direction: column;
}

.name_price {
  width: 510rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 55rpx;
}

.name_price .name {
  font-size: 30rpx;
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.name_price .price {
  font-size: 30rpx;
  color: #b80106;
}

.log_time {
  font-size: 30rpx;
  color: #666;
}
