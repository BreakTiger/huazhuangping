page {
  background-color: #fff;
}

/* 整体容器 */

.container {
  width: 750rpx;
  display: flex;
  flex-direction: column;
}

/* 员工列表 */

.e-lists {
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  padding-left: 22rpx;
}

/* 员工列表的每项 */

.e-lists-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 40rpx;
  width: 100%;
  height: auto
}

/* 图片 */

.item-img {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

/* 信息 */

.item-info {
  width:460rpx;
  display: flex;
  flex-direction: column;
  margin-left: 40rpx;
  border-bottom: 2rpx solid #f3f3f3;
  padding-bottom: 20rpx;
}

/* 名字 */

.name {
  font-size: 30rpx;
  color: #414141;
  margin-bottom: 30rpx;
}

progress {
  width: 400rpx;
  margin-bottom: 10rpx;
}

.number {
  font-size: 24rpx;
  color: #b80106;
}

/* 按钮 */

.btn1 {
  width: 140rpx;
  height: 45rpx;
  font-size: 28rpx;
  color: #fff;
  border: 2rpx solid #666;
  background-color: #b80106;
  border-radius: 10rpx;
  text-align: center;
  margin-left: 320rpx;
}

.btn2 {
  width: 140rpx;
  height: 45rpx;
  line-height: 45rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #9e9e9e;
  border-radius: 10rpx;
  text-align: center;
  margin-left: 320rpx;
}
