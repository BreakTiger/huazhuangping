view{
  overflow: visible;
}
.car-empty {
  width: 100%;
  height: 150rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  background: #B80106;
  position: fixed;
  top: 0rpx;
  left: 0rpx
}
/*外部容器*/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-radius: 15rpx;
  width: 95%;
  margin: auto;
  margin-top: -100rpx;
  overflow: hidden
} 
 
/*整体列表*/
.carts-list {
  display: flex;
  flex-direction: column;
  margin-bottom: 180rpx;
  margin-top: 50rpx
}
 
/*每行单元格*/
.carts-item {
  display: flex;
  flex-direction: row;
  height:300rpx;
  width:100%;
  align-items: center;
  background-color: white;
  border-bottom: 1rpx solid #f7f7f7;
  position: relative;
}
/* 对号图标 */
.carts-choice{
  margin-right: 20rpx;
  margin-left: 24rpx;
} 
/*左部图片*/
.carts-image {
  width:200rpx;
  height:200rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.carts-image image{
  width: 100%;
  height: 100%;
}
 
 
/*右上部分标题*/
.carts-text{
  height: 260rpx;
  flex: 1;
  padding-right: 24rpx;
}
.carts-title {
  width: 360rpx;
  height: 85rpx;
  font-size: 28rpx;
  margin-top: 15rpx;
  /* padding-right: 20rpx; */
  overflow: hidden;
  /* text-overflow:ellipsis; */
  /* white-space: nowrap; */
}
 
/*右下部分价格与数量*/
.carts-subtitle {
  font-size: 25rpx;
  color:#A0A0A0;
  /* margin: 20rpx 0 20rpx; */
}
 
/*加减号控制数量*/
.stepper-box{
  display: flex;
  justify-content: space-between;
  margin-top: 10rpx;
}
.stepper-box>view:first-child{
  color: #A0A0A0;
  font-size: 22rpx;
  margin-top: 15rpx;
}
.stepper-box>view:first-child text{
  color: #B80106;
  font-size: 32rpx;
}
.stepper{
  display: flex;
  border-radius: 5px;
  text-align: center;
}

.stepper text{
  display: block;
  width: 40rpx;
  height: 40rpx;
  border:1px solid transparent;
  line-height: 50rpx;
  color: #333;
  background-color: #f7f7f7;
}
.stepper text.normal{
  border:1px solid transparent; 
}
.stepper text.disabled{
  /* border:1px solid rgba(221,221,221,0.3); */
  color: #ccc;

}
.stepper .number{
  width: 50rpx;
  font-size: 28rpx;
  height: 50rpx;
  border: 1px solid transparent; 
  line-height: 50rpx;
  color: #333333;
  margin: 0 2px;
}
.stepper text:first-child{
  border-right: none;
  border-top-left-radius: 3px;
  border-bottom-left-radius: 3px;
}
.stepper text:last-child{
  border-left: none;
  border-top-right-radius: 3px;
  border-bottom-right-radius: 3px;
}
.carts-list .delete{
  width: 100%;
  height: 30rpx;
  position: relative;
  text-align: right;
}
.delete-img{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  position: absolute;
  top: 0rpx;
  right: 0rpx
}
.delete-img image{
    width: 100%;  
    height: 100%;  

  vertical-align: top;
}

/* 全选和区结算按钮 ********************************/
.bottombox{
  width: 100%;
  height: 150rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  background: #f7f7f7;
  z-index: 10
}
/*底部按钮*/
.carts-footer {
  width: 700rpx;
  height: 100rpx;
  display: flex;
  margin: auto;
  align-items: center;
  background-color: white;
  overflow: hidden;
  z-index: 1000;
  border-radius: 15rpx;
  box-shadow: 0 0 100rpx 1rpx #e5e5e5;
  margin-top: 25rpx
}
 
/*复选框*/
.carts-footer icon {
  margin-left: 20rpx;
  margin-right: 15rpx;
}
 
/*全选字样*/
.carts-footer text {
  font-size: 30rpx;
  margin-left: 8rpx;
  line-height: 10rpx;
}
.all-chioce{
  height: 100%;
  box-sizing: border-box;
  flex: 1;
  display: flex;
  justify-content: space-between;
}
.footer-left{
  width: 190rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx
}
.footer-right{
  padding-right: 25rpx;
  flex: 1;
  direction: rtl;
}
.right-text{
  line-height: 100rpx;
  color: #B80106
}

